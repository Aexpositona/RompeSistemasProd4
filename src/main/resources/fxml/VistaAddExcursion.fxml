<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.RompeSistemasHibernate.Vista.VistaAddExcursionController">
    <children>
        <Label text="Añadir Excursión"/>
        <TextField fx:id="descripcionField" promptText="Descripción"/>
        <DatePicker fx:id="fechaPicker" promptText="Fecha"/>
        <TextField fx:id="precioField" promptText="Precio"/>
        <TextField fx:id="diasField" promptText="Días"/>
        <Button text="Añadir Excursión" onAction="#handleAddExcursion"/>
        <Button text="Atrás" onAction="#handleBack"/>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
