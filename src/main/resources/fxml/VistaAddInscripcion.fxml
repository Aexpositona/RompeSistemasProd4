<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:controller="com.example.RompeSistemasHibernate.Vista.VistaAddInscripcionController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <Label text="Añadir Inscripción" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <Label text="Seleccionar Socio:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="comboBoxSocios" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Seleccionar Excursión:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="comboBoxExcursiones" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
        <Button text="Añadir Inscripción" onAction="#handleAddInscripcion"/>
        <Button text="Atrás" onAction="#handleAtras"/>
    </HBox>

    <Label fx:id="labelMensaje" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
</GridPane>
